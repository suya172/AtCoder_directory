{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cppbuild",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "g++",
            "args": [
                "-std=c++20",
                "-I",
                "/home/asahi/library/ac-library/",
                "-D=ATCODER",
                "-D=__LOCAL",
                "-g",
                "-O0",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${workspaceFolder}/a.out"
            ],
            "group": "build"
        }
    ]
}